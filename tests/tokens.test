test tokens-1.1 {
    Modifier ?
} -body {
    createTestFile {
        set apa x
        ##nagelfar syntax gurka o? x?
        ##nagelfar option gurka -flag -wiggle
        gurka
        gurka hej
        gurka $apa
        gurka -flag hopp
    }
    execTestFile
} -result {%%}

test tokens-1.2 {
    Modifier ?
} -body {
