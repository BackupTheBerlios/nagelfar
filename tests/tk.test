test tk-1.1 {
    Tk, options
} -body {
    createTestFile {
        entry .e -textvariable apa -width 22
        entry .f -gurkmeja 2
    }
    execTestFile
} -result {%%Line   3: E Bad option -gurkmeja to entry}

test tk-2.1 {
    Tk, option types
} -body {
    createTestFile {
        set bepa hej
        set cepa hopp
        set apa [entry .e -textvariable bepa]
        $apa configure -textvariable cepa
    }
    execTestFile
} -result {%%}

